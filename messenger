    <script>
        // –ì–ª–æ–±–∞–ª—å–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ
        let currentUser = null;
        let currentChat = null;
        let messages = [];
        let serverStatus = 'connected';
        
        // –ë–∞–∑–∞ –¥–∞–Ω–Ω—ã—Ö –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π
        const users = {
            'darkzentral': {
                username: '@darkzentral',
                password: 'admin123',
                name: 'Dark Zentral',
                role: '–ê–¥–º–∏–Ω–∏—Å—Ç—Ä–∞—Ç–æ—Ä',
                avatar: 'DZ',
                color: '#8b5cf6',
                online: true
            },
            'devkilller': {
                username: '@devkilller',
                password: 'mod456',
                name: 'Dev Killer',
                role: '–ú–æ–¥–µ—Ä–∞—Ç–æ—Ä',
                avatar: 'DK',
                color: '#ef4444',
                online: true
            },
            'osintdezt': {
                username: '@osintdezt',
                password: 'analyst789',
                name: 'Osint Dezt',
                role: '–ê–Ω–∞–ª–∏—Ç–∏–∫',
                avatar: 'OD',
                color: '#10b981',
                online: true
            },
            'opticalsociety': {
                username: '@opticalsociety',
                password: 'user000',
                name: 'Optical Society',
                role: '–°–æ–æ–±—â–µ—Å—Ç–≤–æ',
                avatar: 'OS',
                color: '#3b82f6',
                online: true
            }
        };
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        document.addEventListener('DOMContentLoaded', function() {
            // –ö–Ω–æ–ø–∫–∏ –≤—Ö–æ–¥–∞
            document.querySelectorAll('.login-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const userKey = this.dataset.user;
                    login(userKey);
                });
            });
            
            // –ö–Ω–æ–ø–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏
            document.getElementById('send-button').addEventListener('click', sendMessage);
            
            // Enter –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏
            document.getElementById('message-input').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') sendMessage();
            });
            
            // –ó–∞–≥—Ä—É–∂–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏—è –∏–∑ localStorage
            loadMessages();
            
            // –ó–∞–ø—É—Å–∫–∞–µ–º —Å–∏–º—É–ª—è—Ü–∏—é —Å–µ—Ç–∏
            simulateNetwork();
        });
        
        // –§—É–Ω–∫—Ü–∏—è –≤—Ö–æ–¥–∞
        function login(userKey) {
            currentUser = users[userKey];
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å
            document.getElementById('current-avatar').textContent = currentUser.avatar;
            document.getElementById('current-avatar').style.background = `linear-gradient(135deg, ${currentUser.color}, ${getDarkerColor(currentUser.color)})`;
            document.getElementById('current-username').textContent = currentUser.name;
            document.getElementById('current-userid').textContent = `ID: ${currentUser.username}`;
            
            // –°–∫—Ä—ã–≤–∞–µ–º —ç–∫—Ä–∞–Ω –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏—è
            document.getElementById('welcome-screen').style.display = 'none';
            
            // –ó–∞–≥—Ä—É–∂–∞–µ–º —á–∞—Ç—ã
            loadChats();
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ
            showNotification(`–í—ã –≤–æ—à–ª–∏ –∫–∞–∫ ${currentUser.name}`);
            
            // –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤ localStorage
            localStorage.setItem('lastUser', userKey);
        }
        
        // –ó–∞–≥—Ä—É–∑–∫–∞ —á–∞—Ç–æ–≤
        function loadChats() {
            const container = document.getElementById('chat-list');
            container.innerHTML = '';
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —á–∞—Ç—ã —Å –¥—Ä—É–≥–∏–º–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è–º–∏
            Object.keys(users).forEach(key => {
                if (key === Object.keys(users).find(k => users[k].username === currentUser.username)) return;
                
                const user = users[key];
                const div = document.createElement('div');
                div.className = 'chat-item';
                div.dataset.user = key;
                
                // –ü–æ–ª—É—á–∞–µ–º –ø–æ—Å–ª–µ–¥–Ω–µ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
                const lastMessage = getLastMessage(user.username);
                
                div.innerHTML = `
                    <div class="chat-avatar" style="background: linear-gradient(135deg, ${user.color}, ${getDarkerColor(user.color)})">
                        ${user.avatar}
                    </div>
                    <div class="chat-info">
                        <div class="chat-name">${user.name}</div>
                        <div class="last-message">${lastMessage || '–ù–µ—Ç —Å–æ–æ–±—â–µ–Ω–∏–π'}</div>
                    </div>
                `;
                
                div.addEventListener('click', () => selectChat(user));
                container.appendChild(div);
            });
            
            // –û–±–Ω–æ–≤–ª—è–µ–º —Å—á–µ—Ç—á–∏–∫ –æ–Ω–ª–∞–π–Ω
            updateOnlineCount();
        }
        
        // –í—ã–±–æ—Ä —á–∞—Ç–∞
        function selectChat(user) {
            currentChat = user;
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å
            document.getElementById('chat-header').style.display = 'flex';
            document.getElementById('messages-container').style.display = 'flex';
            document.getElementById('message-input-area').style.display = 'flex';
            
            document.getElementById('chat-name').textContent = user.name;
            document.getElementById('chat-avatar').textContent = user.avatar;
            document.getElementById('chat-avatar').style.background = `linear-gradient(135deg, ${user.color}, ${getDarkerColor(user.color)})`;
            document.getElementById('chat-status').textContent = user.online ? 'üü¢ –æ–Ω–ª–∞–π–Ω' : 'üî¥ –æ—Ñ—Ñ–ª–∞–π–Ω';
            
            // –ü–æ–º–µ—á–∞–µ–º –∞–∫—Ç–∏–≤–Ω—ã–π —á–∞—Ç
            document.querySelectorAll('.chat-item').forEach(item => {
                item.classList.remove('active');
                if (item.dataset.user === Object.keys(users).find(k => users[k].username === user.username)) {
                    item.classList.add('active');
                }
            });
            
            // –ó–∞–≥—Ä—É–∂–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏—è
            loadChatMessages();
        }
        
        // –ó–∞–≥—Ä—É–∑–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏–π —á–∞—Ç–∞
        function loadChatMessages() {
            const container = document.getElementById('messages-container');
            container.innerHTML = '';
            
            // –§–∏–ª—å—Ç—Ä—É–µ–º —Å–æ–æ–±—â–µ–Ω–∏—è –¥–ª—è —Ç–µ–∫—É—â–µ–≥–æ —á–∞—Ç–∞
            const chatMessages = messages.filter(msg => 
                (msg.from === currentUser.username && msg.to === currentChat.username) ||
                (msg.from === currentChat.username && msg.to === currentUser.username)
            );
            
            // –°–æ—Ä—Ç–∏—Ä—É–µ–º –ø–æ –≤—Ä–µ–º–µ–Ω–∏
            chatMessages.sort((a, b) => new Date(a.time) - new Date(b.time));
            
            // –û—Ç–æ–±—Ä–∞–∂–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏—è
            chatMessages.forEach(msg => {
                const isOutgoing = msg.from === currentUser.username;
                const messageDiv = document.createElement('div');
                messageDiv.className = `message ${isOutgoing ? 'outgoing' : 'incoming'}`;
                
                messageDiv.innerHTML = `
                    ${!isOutgoing ? `<div class="message-sender">${msg.from}</div>` : ''}
                    <div class="message-text">${msg.text}</div>
                    <div class="message-time">${formatTime(msg.time)}</div>
                `;
                
                container.appendChild(messageDiv);
            });
            
            // –ü—Ä–æ–∫—Ä—É—á–∏–≤–∞–µ–º –≤–Ω–∏–∑
            container.scrollTop = container.scrollHeight;
        }
        
        // –û—Ç–ø—Ä–∞–≤–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏—è
        function sendMessage() {
            const input = document.getElementById('message-input');
            const text = input.value.trim();
            
            if (!text || !currentChat || !currentUser) return;
            
            // –°–æ–∑–¥–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ
            const message = {
                from: currentUser.username,
                to: currentChat.username,
                text: text,
                time: new Date().toISOString(),
                id: Date.now() + Math.random().toString(36).substr(2, 9)
            };
            
            // –î–æ–±–∞–≤–ª—è–µ–º –≤ –º–∞—Å—Å–∏–≤ —Å–æ–æ–±—â–µ–Ω–∏–π
            messages.push(message);
            
            // –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤ localStorage
            saveMessages();
            
            // –û—Ç–æ–±—Ä–∞–∂–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ
            const container = document.getElementById('messages-container');
            const messageDiv = document.createElement('div');
            messageDiv.className = 'message outgoing';
            messageDiv.innerHTML = `
                <div class="message-text">${text}</div>
                <div class="message-time">${formatTime(message.time)}</div>
            `;
            container.appendChild(messageDiv);
            
            // –û—á–∏—â–∞–µ–º –ø–æ–ª–µ –≤–≤–æ–¥–∞
            input.value = '';
            
            // –ü—Ä–æ–∫—Ä—É—á–∏–≤–∞–µ–º –≤–Ω–∏–∑
            container.scrollTop = container.scrollHeight;
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –ø–æ—Å–ª–µ–¥–Ω–µ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ –≤ —Å–ø–∏—Å–∫–µ
            updateLastMessage(currentChat.username, text);
            
            // –°–∏–º—É–ª—è—Ü–∏—è –æ—Ç–≤–µ—Ç–∞ (–¥–ª—è –¥–µ–º–æ)
            simulateReply();
        }
        
        // –°–∏–º—É–ª—è—Ü–∏—è –æ—Ç–≤–µ—Ç–∞ –æ—Ç –¥—Ä—É–≥–æ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
        function simulateReply() {
            if (!currentChat || Math.random() < 0.3) return;
            
            setTimeout(() => {
                const replies = [
                    "–ü—Ä–∏–≤–µ—Ç! –ö–∞–∫ –¥–µ–ª–∞?",
                    "–ü–æ–ª—É—á–∏–ª —Ç–≤–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ",
                    "–ò–Ω—Ç–µ—Ä–µ—Å–Ω–æ...",
                    "–î–∞–≤–∞–π –æ–±—Å—É–¥–∏–º —ç—Ç–æ –ø–æ–¥—Ä–æ–±–Ω–µ–µ",
                    "–°–æ–≥–ª–∞—Å–µ–Ω —Å —Ç–æ–±–æ–π",
                    "–ê —á—Ç–æ –¥—É–º–∞–µ—à—å –ø–æ —ç—Ç–æ–º—É –ø–æ–≤–æ–¥—É?",
                    "–°–ø–∞—Å–∏–±–æ –∑–∞ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é!",
                    "–•–æ—Ä–æ—à–æ, –ø–æ–Ω—è–ª —Ç–µ–±—è"
                ];
                
                const randomReply = replies[Math.floor(Math.random() * replies.length)];
                
                const replyMessage = {
                    from: currentChat.username,
                    to: currentUser.username,
                    text: randomReply,
                    time: new Date().toISOString(),
                    id: Date.now() + Math.random().toString(36).substr(2, 9)
                };
                
                messages.push(replyMessage);
                saveMessages();
                
                if (currentChat) {
                    const container = document.getElementById('messages-container');
                    const messageDiv = document.createElement('div');
                    messageDiv.className = 'message incoming';
                    messageDiv.innerHTML = `
                        <div class="message-sender">${currentChat.username}</div>
                        <div class="message-text">${randomReply}</div>
                        <div class="message-time">${formatTime(replyMessage.time)}</div>
                    `;
                    container.appendChild(messageDiv);
                    container.scrollTop = container.scrollHeight;
                    
                    updateLastMessage(currentChat.username, randomReply);
                    
                    // –£–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ
                    showNotification(`–ù–æ–≤–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ –æ—Ç ${currentChat.name}`);
                }
            }, 1000 + Math.random() * 4000);
        }
        
        // –ó–∞–≥—Ä—É–∑–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏–π –∏–∑ localStorage
        function loadMessages() {
            const saved = localStorage.getItem('ds_messages');
            if (saved) {
                messages = JSON.parse(saved);
            } else {
                // –î–µ–º–æ —Å–æ–æ–±—â–µ–Ω–∏—è
                messages = [
                    {
                        from: '@darkzentral',
                        to: '@devkilller',
                        text: '–ü—Ä–∏–≤–µ—Ç! –ö–∞–∫ —Ä–∞–±–æ—Ç–∞ –Ω–∞–¥ –ø—Ä–æ–µ–∫—Ç–æ–º?',
                        time: new Date(Date.now() - 3600000).toISOString()
                    },
                    {
                        from: '@devkilller',
                        to: '@darkzentral',
                        text: '–í—Å–µ –∏–¥–µ—Ç –ø–æ –ø–ª–∞–Ω—É, —Å–∫–æ—Ä–æ –∑–∞–∫–æ–Ω—á—É',
                        time: new Date(Date.now() - 3540000).toISOString()
                    },
                    {
                        from: '@osintdezt',
                        to: '@opticalsociety',
                        text: '–û—Ç—á–µ—Ç –≥–æ—Ç–æ–≤, –ø—Ä–æ–≤–µ—Ä—å –∫–æ–≥–¥–∞ –±—É–¥–µ—Ç –≤—Ä–µ–º—è',
                        time: new Date(Date.now() - 7200000).toISOString()
                    }
                ];
                saveMessages();
            }
        }
        
        // –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ —Å–æ–æ–±—â–µ–Ω–∏–π –≤ localStorage
        function saveMessages() {
            localStorage.setItem('ds_messages', JSON.stringify(messages));
            
            // –¢–∞–∫–∂–µ –æ—Ç–ø—Ä–∞–≤–ª—è–µ–º –Ω–∞ "—Å–µ—Ä–≤–µ—Ä" (GitHub Pages)
            // –í —Ä–µ–∞–ª—å–Ω–æ–º –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–∏ –∑–¥–µ—Å—å –±—É–¥–µ—Ç fetch –∑–∞–ø—Ä–æ—Å –∫ GitHub API
        }
        
        // –ü–æ–ª—É—á–µ–Ω–∏–µ –ø–æ—Å–ª–µ–¥–Ω–µ–≥–æ —Å–æ–æ–±—â–µ–Ω–∏—è
        function getLastMessage(username) {
            const userMessages = messages.filter(msg => 
                msg.from === username || msg.to === username
            );
            
            if (userMessages.length === 0) return null;
            
            userMessages.sort((a, b) => new Date(b.time) - new Date(a.time));
            return userMessages[0].text.substring(0, 30) + (userMessages[0].text.length > 30 ? '...' : '');
        }
        
        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ø–æ—Å–ª–µ–¥–Ω–µ–≥–æ —Å–æ–æ–±—â–µ–Ω–∏—è –≤ —Å–ø–∏—Å–∫–µ
        function updateLastMessage(username, text) {
            const chatItem = document.querySelector(`.chat-item[data-user="${Object.keys(users).find(k => users[k].username === username)}"]`);
            if (chatItem) {
                const lastMessage = chatItem.querySelector('.last-message');
                if (lastMessage) {
                    lastMessage.textContent = text.substring(0, 30) + (text.length > 30 ? '...' : '');
                }
            }
        }
        
        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å—á–µ—Ç—á–∏–∫–∞ –æ–Ω–ª–∞–π–Ω
        function updateOnlineCount() {
            const onlineUsers = Object.values(users).filter(u => u.online).length;
            document.getElementById('online-count').textContent = onlineUsers;
        }
        
        // –°–∏–º—É–ª—è—Ü–∏—è —Å–µ—Ç–∏
        function simulateNetwork() {
            setInterval(() => {
                // –†–∞–Ω–¥–æ–º–Ω–æ–µ –∏–∑–º–µ–Ω–µ–Ω–∏–µ —Å—Ç–∞—Ç—É—Å–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π
                Object.keys(users).forEach(key => {
                    if (Math.random() > 0.95) {
                        users[key].online = !users[key].online;
                    }
                });
                
                updateOnlineCount();
                
                // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å—Ç–∞—Ç—É—Å–∞ —Ç–µ–∫—É—â–µ–≥–æ —á–∞—Ç–∞
                if (currentChat) {
                    const userKey = Object.keys(users).find(k => users[k].username === currentChat.username);
                    if (userKey) {
                        document.getElementById('chat-status').textContent = 
                            users[userKey].online ? 'üü¢ –æ–Ω–ª–∞–π–Ω' : 'üî¥ –æ—Ñ—Ñ–ª–∞–π–Ω';
                    }
                }
            }, 5000);
            
            // –ü–µ—Ä–∏–æ–¥–∏—á–µ—Å–∫–∞—è —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∞—Ü–∏—è —Å "—Å–µ—Ä–≤–µ—Ä–æ–º"
            setInterval(() => {
                if (serverStatus === 'connected') {
                    // –ó–¥–µ—Å—å –±—É–¥–µ—Ç —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∞—Ü–∏—è —Å GitHub
                    console.log('–°–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∞—Ü–∏—è —Å —Å–µ—Ä–≤–µ—Ä–æ–º...');
                }
            }, 30000);
        }
        
        // –í—Å–ø–æ–º–æ–≥–∞—Ç–µ–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏
        function getDarkerColor(color) {
            const hex = color.replace('#', '');
            let r = parseInt(hex.substring(0, 2), 16);
            let g = parseInt(hex.substring(2, 4), 16);
            let b = parseInt(hex.substring(4, 6), 16);
            
            r = Math.floor(r * 0.8);
            g = Math.floor(g * 0.8);
            b = Math.floor(b * 0.8);
            
            return `rgb(${r}, ${g}, ${b})`;
        }
        
        function formatTime(timeString) {
            const date = new Date(timeString);
            return date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
        }
        
        function showNotification(message) {
            // –ü—Ä–æ—Å—Ç–æ–µ —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ
            console.log('üì¢ ' + message);
        }
        
        // –ê–≤—Ç–æ–≤—Ö–æ–¥ –ø–æ—Å–ª–µ–¥–Ω–µ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
        const lastUser = localStorage.getItem('lastUser');
        if (lastUser && users[lastUser]) {
            setTimeout(() => login(lastUser), 500);
        }
        
        // –°—Ç–∏–ª–∏ –¥–ª—è –∫–Ω–æ–ø–æ–∫ –≤—Ö–æ–¥–∞
        const style = document.createElement('style');
        style.textContent = `
            .login-btn {
                padding: 15px 20px;
                background: var(--card);
                border: 1px solid var(--border);
                border-radius: 10px;
                color: var(--text);
                font-size: 16px;
                cursor: pointer;
                transition: all 0.3s;
                text-align: center;
            }
            
            .login-btn:hover {
                background: var(--accent);
                border-color: var(--accent);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(107, 99, 255, 0.3);
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
